

<% @projects.each do |project| %>
    
    <% @counter += 1 %>
    
        <div class='row' >
            <% if ( @counter%2 == 0) %>
                <div class="section-white">
                    <div class='container'>
                        <div class='col s4 m4'>
                            <h4><%= project.name %></h4>
                            <p><%= project.description %></p>
                        </div>

                        <div class='col s2 m2'>
                        </div>

                        <div class="col s6 m6">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="card-title">
                                        <%= project.name %>
                                    </span>
                                    <p><%= project.description %></p>
                                </div>
                                <div class="card-action">
                                        <a href="<%= project.site_link %>">site_link</a>
                                        <a href="<%= project.git_link %>">git_link</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% else %>
                <div class="section-color">
                    <div class='container'>
                        <div class="col s6 m6">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="card-title">
                                        <%= project.name %>
                                    </span>
                                    <p><%= project.description %></p>
                                </div>
                                <div class="card-action">
                                        <a href="<%= project.site_link %>">site_link</a>
                                        <a href="<%= project.git_link %>">git_link</a>
                                </div>
                            </div>
                        </div>

                        <div class='col s2 m2'>
                        </div>

                        <div class='col s4 m4'>
                            <h4><%= project.name %></h4>
                            <p><%= project.description %></p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    
<% end %>
